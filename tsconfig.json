{
	"compilerOptions": {
		"target": "ES2015",
		"useDefineForClassFields": true,
		"module": "ES2015",
		"lib": ["ES2015", "DOM"],
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
